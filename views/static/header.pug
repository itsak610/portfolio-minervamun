    script.
        function hideit() {
            loader.style.display = 'none'
        }
        var loader = document.querySelector(".loader");
        var side = document.querySelector(".side");
        function loadFunction() {
            loader.className += " hidden1"; // class "loader hidden"
        }
        $(function() {
            $('#masthead').hover(function() {
                document.getElementById("navswitch1").classList.add("navswitch1")
                document.getElementById("navswitch3").classList.add("navswitch1")
                document.getElementsByClassName("menu-item")[0].classList.add("navham")
