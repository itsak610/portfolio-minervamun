                    document.getElementsByClassName("navswitch2")[3].classList.add("navswitch2color")
                    document.getElementsByClassName("navswitch2")[4].classList.add("navswitch2color")
                    document.getElementsByClassName("navswitch2")[5].classList.add("navswitch2color")
                    document.getElementsByClassName("navswitch2")[6].classList.add("navswitch2color")
                    document.getElementsByClassName("active")[0].classList.add("navswitch3color")
                }
                else{
                    document.getElementById("navswitch1").classList.remove("navswitch1")
                    document.getElementById("navswitch3").classList.remove("navswitch1")
                    document.getElementsByClassName("menu-item")[0].classList.remove("navham")
                    document.getElementsByClassName("menu-item")[1].classList.remove("navham")
                    document.getElementsByClassName("menu-item")[2].classList.remove("navham")
