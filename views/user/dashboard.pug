    script.
        document.getElementById("dashboardnav").classList.toggle("active");

        document.getElementById("navswitch1").classList.add("navswitch1")
        document.getElementById("navswitch3").classList.add("navswitch1")
        document.getElementsByClassName("menu-item")[0].classList.add("navham")
        document.getElementsByClassName("menu-item")[1].classList.add("navham")
        document.getElementsByClassName("menu-item")[2].classList.add("navham")
