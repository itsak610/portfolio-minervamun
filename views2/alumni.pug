extends layout

block content
    style.
        ::-webkit-scrollbar {
            width: 13px;
            z-index: -1;
            cursor: crosshair;
        }

        ::-webkit-scrollbar-thumb {
            border: 5px solid transparent;
            background-clip: content-box;
            border-radius: 100px;
            background-color: #FFBF00;
        }
        ::-webkit-scrollbar-track {
            background: #98720B;
            border: 7px solid transparent;
            background-clip: content-box;
        }

        ::selection {
            background-color: #D8BB5D;
            color: #000;
        }
        .cursor__circle {
            border: solid 1px #D8BB5D;
        }
        #cursor.golden .cursor__circle {
            width: 128px;
            height: 128px;
            background-color: #D8BB5D;
            border-color: #D8BB5D;
        }
        #cursor.golden::after {
            content: "";
            position: absolute;
            left: -50%;
            top: -50%;
            width: 100%;
            height: 100%;
        }

        section{
            height:fit-content;
            width:100%;
            display:block;
            margin-top: 100px;
        }
        header > * {
            color: #FFBF00;
        }
        a{
            color: #FFBF00;
        }
        .hamburger-menu .menu-item{
            background: #FFBF00;
        }
        footer{
            border-top: 1px solid #FFBF00;
        }
        footer > * {
            color: #FFBF00;
        }
        .logo img{
            height: 100px;
        }
        @media (max-width:750px){
            .mob-logo{
                max-height: 60px;
            }
        }
        @media (min-width:750px) and (max-width:1112px){
            .mob-logo{
                max-height: 80px;
                height: 80px;
            }
            .hamburger-menu{
                margin-top:0;
            }
        }
        .bande{
            width: 100%;
            margin: 0 auto;
        }
        .banda{
            display:flex;
            width: 100%;
            align-items:center;
            justify-content: center;

        }
        .bandacontent{
            display:flex;
            flex-flow:column;
            padding:50px;
            width:60%
        }
        .bandacontent h2{
            padding: 35px 0;
            color: #FFBF00;
            text-align:center;
        }
        .bandacontent p{
            padding: 35px 0;
            font-size: 1.2vw;
            line-height: 2vw;
            color: #D8BB5D;
            text-align:center;
        }
        .bandaphoto{
            display:flex;
            flex-flow:column;
            align-items:center;
            justify-content: space-around;
            width:30%;
        }
        .bandaphoto img{
            width: 10vw;
            height: 12vw;
            min-height: 140px;
            min-width: 105px;
            border: 1px solid #FFBF00;
        }
